<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/circle_button_background"
        app:tint="@android:color/white"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:elevation="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Tutup" />

    <LinearLayout
        android:id="@+id/bottom_actions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="32dp"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/button_gallery"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_image"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Buka Galeri" />

        <ImageButton
            android:id="@+id/button_shutter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/shutter_button_background"
            android:elevation="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:contentDescription="Tombol Deteksi" />

        <ImageButton
            android:id="@+id/button_flip_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_flip_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:scaleType="centerInside"
            android:padding="12dp"
            android:contentDescription="Balik Kamera" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_result_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_corner_background"
        android:backgroundTint="#CCFFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bottom_actions_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView_result_status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/ic_checkmark_circle"
            tools:tint="@color/status_success_icon"
            android:contentDescription="Ikon Status Hasil" />

        <TextView
            android:id="@+id/textView_vehicleClass_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            tools:text="Golongan II - Mobil Penumpang" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_processing_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#B3000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:indicatorColor="@android:color/white"
            android:indeterminate="true"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>